rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{uid}/cards/{cardId} {
      allow read, write: if isAuthenticated() && request.auth.uid == uid;
    }

    match /cardShares/{token} {
      allow read: if true;

      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    match /cardShares/{token}/reads/{readId} {
      function shareOwner() {
        return get(/databases/$(database)/documents/cardShares/$(token)).data.ownerId;
      }

      allow create: if true;
      allow read, delete: if isAuthenticated() && request.auth.uid == shareOwner();
    }
  }
}
